    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Flask - EvoPIE",
            "type": "python",
            "request": "launch",
            "module" : "flask",
            "env" : {
                "FLASK_APP" : "app.py",
                "FLASK_ENV" : "development",
                "FLASK_DEBUG" : "1"
            },
            "args" : [
                "run",
                "--host",
                //"0.0.0.0",
                "127.0.0.1",
                "--no-debugger",
                "--no-reload"
            ],
            "jinja" : true
            //"program": "app.py",
            //"module": "evopie.${fileBasenameNoExtension}",
            //"console": "integratedTerminal"
        },
        {
            "name": "CLI: quiz init",
            "type": "python",
            "request": "launch",
            "module" : "flask",
            "env" : {
                "FLASK_APP" : "app.py",
                "FLASK_ENV" : "development",
                "FLASK_DEBUG" : "1"
            },
            "args" : [
                "quiz",
                "init",
                "-nq",
                "3",
                "-nd",
                "5"
            ]
        }        
    ]
}